{
  "name": "@thomaswawra/server-spotify",
  "version": "0.4.4",
  "description": "Spotify Web API MCP server for accessing music, artists, albums, and recommendations",
  "type": "module",
  "bin": {
    "mcp-spotify": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "axios": "^1.7.9",
    "node-osascript": "^2.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "mcp",
    "spotify",
    "music",
    "api",
    "modelcontextprotocol"
  ],
  "author": "Thomas Wawra",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/superseoworld/mcp-spotify.git"
  },
  "publishConfig": {
    "access": "public"
  }
}
